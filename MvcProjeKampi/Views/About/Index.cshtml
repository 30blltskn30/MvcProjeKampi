@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakımızda Verileri Listeleme Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Akitf Yap</th>
        <th>Pasif Yap</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.AboutId</td>
                    <td>Başlık</td>
                    <td><a href="#" class="btn btn-warning">Aktif Yap</a></td>
                    <td><a href="#" class="btn btn-success">Pasif Yap</a></td>
                </tr>
            }
</table>

<!--Bu POP kulanımı. Fakat Index sayfasında hem listeleme hemde ekleme yaparak solidi ezmemek için partial view kullanımını yapacağız -->




@Html.Action("AboutPartial","About")