@using EntityLayer.Concrete
@model List<Content>

@{
    ViewBag.Title = "GetAllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Üst boşluğu azaltır */
    .content-wrapper {
        padding-top: 0.5rem !important;
    }

    /* İsteğe bağlı: sayfa görünümünü ortalar */
    .content {
        margin-top: 0 !important;
    }
</style>

<section class="content">
    <div class="container-fluid mt-3">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card card-primary card-outline shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-search me-2"></i>İçerik Arama</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("GetAllContent", "Content", FormMethod.Post, new { @class = "row g-2 mb-3" }))
                        {
                            <div class="col-md-9">
                                @Html.TextBox("p", null, new { @class = "form-control", placeholder = "Aranacak kelimeyi girin..." })
                            </div>
                            <div class="col-md-3 d-grid">
                                <input type="submit" value="Ara" class="btn btn-primary" />
                            </div>
                        }

                        <hr />

                        @if (Model == null || !Model.Any())
                        {
                            <div class="text-center text-muted mt-3">
                                <i class="fas fa-info-circle"></i> Henüz bir sonuç bulunamadı.
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <p class="card-text mb-0">@item.ContentValue</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
