
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*// SweetAlert2 kütüphanesini ekliyoruz*@
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script src="~/Scripts/jquery-3.7.0.js"></script>

<button class="btn btn-primary" id="btn1">Buton1</button>
<button class="btn btn-danger" id="btn2">Buton2</button>
<button class="btn btn-warning" id="btn3">Buton3</button>

<script>
    $('#btn1').click(function () {
        swal("Merhaba MVC Proje kampı");

    });
</script>

<script>
    $('#btn2').click(function () {
        swal("MVC Proje Kampı", "Ders96...");

    });
</script>

<script>
    $('#btn3').click(function () {
        swal("Tebrikler", "Başarılı bir şekilde eklendi","success");

    });
</script>