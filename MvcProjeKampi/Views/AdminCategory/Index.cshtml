 @using EntityLayer.Concrete


@model  List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Sil</th>
       <th>Güncelle</th>
       <th>Başlıklar</th> 

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn btn-success">Güncelle</td>
            <td><a href="#" class="btn btn-primary">Başlıklar</td>

        </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-dark">Yeni Kategori</a>
