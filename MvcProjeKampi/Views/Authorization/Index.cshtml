@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole     </td>
            <td>Aktif</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.AdminId" class="btn btn-danger">Pasif Yap</td>
            <td><a href="/AdminCategory/EditCategory/@item.AdminId" class="btn btn-success">Yetkisini Değiştir</td>
           

        </tr>
    }
</table>
<br />
<a href="/Authorization/AddAdmin/" class="btn btn-info">Yeni Admin Tanımlama</a>

